{
  "verbose": true,
  "src": {
    "beforeStartCommand": "git stash save -u 'Preparing for release'",
    "afterReleaseCommand": "git stash pop",
    "commit": true,
    "tag": true,
    "tagName": "v%s"
  },
  "dist": {
    "repo": "git@github.com:j5bot/deck-of-cards.git#gh-pages",
    "beforeStageCommand": "mkdir -p ./assets/data; cp ./reports/js-test-results.json ./assets/data/"
  },
  "github": {
    "release": true,
    "assets": "reports/js-test-results.json"
  },
  "npm": {
    "publish": false
  },
  "prompt": {
    "src": {
      "status": true
    }
  }
}
